---
import MainLayout from '../layouts/MainLayout.astro'
import MarqueeCities from '../components/MarqueeCities.astro'
---

<MainLayout
  title="Weather Teampus"
  description="Weather info - Tempus"
  image="/default-image.jpg"
>
  <MarqueeCities />
</MainLayout>

<style>
  body {
    background-color: #5a5a5a;
    color: #fff;
  }
  .marquee--wrapper {
    padding: 0.625rem 0;
    background-color: #000;
  }
  .marquee--text {
    overflow: clip;
  }
  .marquee--text-track {
    display: flex;
    gap: 1rem;
    animation: marquee-move-text 300s linear infinite;
    list-style: none;
    width: max-content;
    padding-left: 1rem;
  }
  .marquee--text-track li {
    width: max-content;
  }
  @keyframes marquee-move-text {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }
</style>
